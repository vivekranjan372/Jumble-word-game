        android:thickness="2dp"
        >
        <stroke android:color="@color/colorAccent"
            android:width="2dp"
            />
        <solid android:color="#CA271C"/>
        <corners android:radius="5dp"/>
        <padding
            android:left="15dp"
            android:right="15dp"
            android:bottom="15dp"
            android:top="15dp"
            />

    </shape>

</item>
</selector>